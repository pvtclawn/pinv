{
  "name": "pinv-box",
  "version": "0.0.13",
  "type": "module",
  "scripts": {
    "test": "~/.bun/bin/bun test",
    "dev": "node --no-node-snapshot --env-file=../.env --env-file=.env.local --import tsx src/index.ts",
    "start": "node --no-node-snapshot --import tsx src/index.ts",
    "docker:build": "cd .. && docker build -f box/Dockerfile -t $npm_package_config_image_name:latest .",
    "docker:stop": "docker rm -f box_manual || true",
    "docker:run": "npm run docker:stop && docker run -d -p 5555:5555 --env PORT=5555 --env INTERNAL_AUTH_KEY=dev-secret-key-123 --name box_manual $npm_package_config_image_name:latest",
    "docker:logs": "docker logs -f box_manual",
    "docker:tag": "docker tag $npm_package_config_image_name:latest $npm_package_config_image_name:$npm_package_version",
    "docker:push": "docker push $npm_package_config_image_name:latest && docker push $npm_package_config_image_name:$npm_package_version",
    "docker:test": "BOX_URL=http://localhost:5555 ~/.bun/bin/bun scripts/docker-test.ts",
    "postversion": "sed -i \"s|image: .*|image: $npm_package_config_image_name:$npm_package_version|\" docker-compose.yml && git add docker-compose.yml",
    "deploy": "npx phala deploy -c docker-compose.yml",
    "release": "~/.bun/bin/bun scripts/release.ts"
  },
  "config": {
    "image_name": "guydoordie/pinv-box"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "@phala/dstack-sdk": "^0.5.7",
    "eciesjs": "^0.4.6",
    "hono": "^4.0.0",
    "isolated-vm": "^6.0.2",
    "pino": "^10.3.0",
    "prom-client": "^15.1.3",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "phala": "^1.1.5"
  }
}