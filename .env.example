# ==============================================================================
# PINV ENVIRONMENT CONFIGURATION
# ==============================================================================
# This file serves as the single source of truth for all required environment variables.
# Copy this file to .env and .env.local and fill in the secrets.
#
# Sections:
# 1. Shared / Public (Runtime & Build)
# 2. Web Service (Frontend)
# 3. OG Service (Backend)
# 4. Third-Party Integrations
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. SHARED / PUBLIC
# ------------------------------------------------------------------------------
# Public URL of the application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Blockchain Configuration
# 8453 (Base Mainnet) or 84532 (Base Sepolia)
NEXT_PUBLIC_CHAIN_ID="84532"
NEXT_PUBLIC_CHAIN="test" # "test" or "mainnet"

# Contract Addresses
# (Defaults are set in code, but can be overridden here)
NEXT_PUBLIC_PINV_ADDRESS=""
NEXT_PUBLIC_PINV_ADDRESS_BASE_SEPOLIA=""
# NEXT_PUBLIC_PINV_ADDRESS_BASE_MAINNET=""

# ------------------------------------------------------------------------------
# 2. WEB SERVICE (Frontend)
# ------------------------------------------------------------------------------
# Base URL for the frontend server
BASE_URL="http://localhost:3000"

# URL for the OG Image Generation Service
NEXT_PUBLIC_OG_ENGINE_URL="http://localhost:8080"

# IPFS Gateway (Public)
NEXT_PUBLIC_IPFS_GATEWAY="https://ipfs.io"

# OnchainKit (Coinbase) - Get from https://portal.cdp.coinbase.com/
NEXT_PUBLIC_ONCHAINKIT_API_KEY=""

# ------------------------------------------------------------------------------
# 3. OG SERVICE (Backend)
# ------------------------------------------------------------------------------
# Server Configuration
PORT="8080"
NODE_ENV="development" # development, production, test
OG_MAX_THREADS="2"

# Security: Signed Timestamp Validation
SIGNED_TS_MAX_AGE_SEC="86400"
SIGNED_TS_FUTURE_SKEW_SEC="600"

# Lit Protocol
LIT_NETWORK="datil-dev"
LIT_DEBUG="false"

# ------------------------------------------------------------------------------
# 4. THIRD-PARTY INTEGRATIONS
# ------------------------------------------------------------------------------
# Redis (Upstash) - Required for Shared Caching and Rate Limiting
# Get from https://console.upstash.com/
REDIS_URL="redis://localhost:6379"
# Web Service specific Redis (rest)


# Pinata (IPFS)
# Get from https://app.pinata.cloud/developers/api-keys
PINATA_JWT=""

# RPC Provider (Optional but recommended for reliability)
# e.g., Alchemy, Infura, QuickNode
RPC_URL=""
PRIORITY_GATEWAY=""

# AI / LLM Configuration
# Models: "anthropic/claude-3.5-sonnet", "google/gemini-pro", etc.
LLM_MODEL="anthropic/claude-3.5-sonnet"
OPENROUTER_API_KEY=""

# Deployment / Contracts
ETHERSCAN_API_KEY=""