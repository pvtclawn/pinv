{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../*"
            ]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts",
        "../lib/**/*.ts",
        "../hooks/**/*.ts",
        "../types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}