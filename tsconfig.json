{
    "compilerOptions": {
        "target": "ES2021",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/lib/*": [
                "./lib/*"
            ],
            "@/contracts/*": [
                "./contracts/*"
            ],
            "@/types/*": [
                "./types/*"
            ],
            "@/types": [
                "./types/index.ts"
            ]
        },
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "lib/**/*",
        "contracts/**/*"
    ],
    "exclude": [
        "node_modules",
        "web",
        "og",
        "lib/ipfs-client.ts"
    ]
}